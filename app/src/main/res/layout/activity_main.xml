<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yusufketen.homework61.MainActivity"
    android:background="?attr/colorControlHighlight">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/twName"
        android:layout_alignBaseline="@+id/textView6"
        android:layout_alignBottom="@+id/textView6"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6"
        android:layout_marginLeft="50dp"
        android:layout_marginStart="50dp" />

    <TextView
        android:text="Isim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etName"
        android:background="@android:color/background_light"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <TextView
        android:text="Soyisim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:layout_below="@+id/etName"
        android:layout_alignLeft="@+id/etSurname"
        android:layout_alignStart="@+id/etSurname" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/etSurname"
        android:background="@android:color/background_light"
        android:layout_width="match_parent"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/etName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView6"
        android:layout_alignStart="@+id/textView6"
        android:id="@+id/twOrta"
        android:visibility="invisible" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/twOrta"
        android:layout_toRightOf="@+id/twOrta"
        android:layout_toEndOf="@+id/twOrta"
        android:layout_marginTop="43dp"
        android:id="@+id/textView3" />

    <Switch
        android:text="Alt alta yazılsın mı ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/swAlt"
        android:layout_alignBaseline="@+id/btLogin"
        android:layout_alignBottom="@+id/btLogin"
        android:layout_alignLeft="@+id/etSurname"
        android:layout_alignStart="@+id/etSurname"
        android:layout_margin="0dp"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp" />

    <TextView
        android:text="Merhaba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView6"
        android:layout_below="@+id/btLogin"
        android:layout_alignLeft="@+id/swAlt"
        android:layout_alignStart="@+id/swAlt"
        android:layout_marginTop="11dp" />

    <Button
        android:text="Giriş yap"
        android:id="@+id/btLogin"
        android:layout_height="wrap_content"
        android:onClick="login"
        android:layout_width="wrap_content"
        android:layout_below="@+id/etSurname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="13dp" />

</RelativeLayout>
